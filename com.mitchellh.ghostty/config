# 好みの問題
theme = Ayu Mirage
cursor-style = bar

# 最近のMacは透明でもパフォーマンスが下がらないので透明にしてみる。GhosttyがGPU使っているのも関係してる？
background-opacity = 0.9
background-blur-radius = 20

# デフォルト選択色が背景と似ているので、前景と背景の色味を入れ替え
selection-foreground = "#33415C"
selection-background = "#b7c2d7"

# ウィンドウ際まで文字詰めされるのは好みじゃない
window-padding-x = 7
window-padding-y = 2,4

# 便利そうなので
clipboard-trim-trailing-spaces = true

# 組み込みのフォントの中で一番好みのもの
font-family = Monaco
font-size = 16
window-inherit-font-size = true

# 合字が有効になるのを防ぐ
font-feature = -dlig
font-feature = -liga
font-feature = -calt

